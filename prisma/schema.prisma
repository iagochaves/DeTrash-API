// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProfileType {
  HODLER
  RECYCLER
  WASTE_GENERATOR
}

model User {
  id         String @id @default(uuid())
  authUserId String @unique

  email         String
  profileType   ProfileType
  lastLoginDate DateTime?
  phoneNumber   String

  forms Form[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Form {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  plasticKgs           Decimal? @default(0)
  plasticVideoFileName String?

  paperKgs           Decimal? @default(0)
  paperVideoFileName String?

  metalKgs           Decimal? @default(0)
  metalVideoFileName String?

  glassKgs           Decimal? @default(0)
  glassVideoFileName String?

  organicKgs           Decimal? @default(0)
  organicVideoFileName String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
